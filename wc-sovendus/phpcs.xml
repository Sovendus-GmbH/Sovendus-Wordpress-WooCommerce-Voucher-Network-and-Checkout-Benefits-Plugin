<?xml version="1.0"?>
<ruleset name="WordPress Plugin Coding Standards">
	<description>
		A custom set of code standard rules for Sovendus WordPress Plugin.
	</description>
	<file>
		.
	</file>
	<exclude-pattern>
		/vendor/*
	</exclude-pattern>
	<exclude-pattern>
		/node_modules/*
	</exclude-pattern>
	<arg name="basepath" value="." />
	<arg name="colors" />
	<arg name="parallel" value="8" />
	<arg value="ps" />
	<config name="minimum_supported_wp_version" value="4.7" />
	<config name="testVersion" value="7.0-" />
	<rule ref="WordPress" />
	<rule ref="PHPCompatibilityWP" />
</ruleset>
